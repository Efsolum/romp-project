<%= form_for @user, url: {action: "update"},
	html: {class: "content"}, method: :patch do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>

	<%= f.label :last_name  %>
	<%= f.text_field :last_name  %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.submit 'Update user' %>
<% end  %>
