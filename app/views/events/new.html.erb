<%= form_for @event, url: {action: "create"}, html: {class: "content"} do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.label :start %>
	<%= f.date_field :start %>
	
	<%= f.label :finish %>
	<%= f.date_field :finish %>
	
	<%= f.label :location %>
	<%= f.text_area :location %>

	<%= f.submit 'Create event' %>
<% end  %>
