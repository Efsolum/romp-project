<%= form_for @event, url: {action: "create"}, html: {class: "content"} do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.label :start %>
	<%= f.datetime_select :start, default: DateTime.now %>
	
	<%= f.label :finish %>
	<%= f.datetime_select :finish, default: DateTime.now %>
	
	<%= f.label :location %>
	<%= f.text_area :location %>

	<%= f.submit 'Create event' %>
<% end  %>
